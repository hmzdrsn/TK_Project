@model Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_LayoutWebUI.cshtml";
}

<form method="post">
    <div class="card-body">
        <div class="form-group mb-3">
            <input type="hidden" asp-for="Id" />
            <label for="simpleinput">Name</label>
            <input type="text" asp-for="Name" id="simpleinput" class="form-control">
        </div>
        <div class="form-group mb-3">
            <button type="submit" class="btn btn-outline-success">Save</button>
            <a href="/Category/Index/" class="btn btn-outline-info">Back</a>
        </div>
    </div>
</form>


