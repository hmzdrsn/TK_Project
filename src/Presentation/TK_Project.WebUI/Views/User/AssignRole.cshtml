@model List<UserRoleVM>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_LayoutWebUI.cshtml";
}

<div class="card shadow">
    <div class="card-body">
        <p class="mb-2"><strong>Rol Ata</strong></p>
        
        <form method="post" asp-controller="User" asp-action="AssignRole">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" id="id" name="id" value="@TempData["userId"]" />
                    <input type="hidden" asp-for="@Model[i].RoleID" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input class="form-check-input" asp-for="@Model[i].RoleExist" type="checkbox"/>
                    <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
                </div>
            }
            <button type="submit" class="btn btn-outline-success">Save Changes</button>
        </form>
    </div>
</div>

