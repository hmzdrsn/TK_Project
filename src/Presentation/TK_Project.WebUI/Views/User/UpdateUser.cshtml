@model User
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_LayoutWebUI.cshtml";
}

<form method="post">
    <div class="card-body">
        <div class="form-group mb-3">
            <input type="hidden" asp-for="Id" />
            <label for="simpleinput">Name</label>
            <input type="text" asp-for="Username" id="simpleinput" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="simpleinput">Password</label>
            <textarea asp-for="Password" class="form-control" id="example-textarea" rows="4"></textarea>
        </div>
        <div class="form-group mb-3">
            <label for="simpleinput">First Name</label>
            <input type="text" asp-for="First_Name" id="simpleinput" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="simpleinput">Last Name</label>
            <input type="text" asp-for="Last_Name" id="simpleinput" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="simpleinput">Address</label>
            <input type="text" asp-for="Address" id="simpleinput" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="simpleinput">Mail</label>
            <input type="text" asp-for="Mail" id="simpleinput" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="simpleinput">Phone Number</label>
            <input type="text" asp-for="Phone_Number" id="simpleinput" class="form-control">
        </div>
        <div class="form-group mb-3">
            <button type="submit" class="btn btn-outline-success">Save</button>
            <a href="/User/Index/" class="btn btn-outline-info">Back</a>
        </div>
    </div>
</form>
