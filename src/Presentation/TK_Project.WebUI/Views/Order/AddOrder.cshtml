@model AddOrderVM
@{
    ViewData["Title"] = "AddOrder";
    Layout = "~/Views/Shared/_LayoutWebUI.cshtml";
}

<form method="post">
    <div class="card-body">
        <div class="form-group mb-3">
            <label for="simpleinput">User ID</label>
            <input type="text" asp-for="UserID" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="simpleinput">Payment Status</label>
            <textarea asp-for="Payment_Status" class="form-control" rows="4"></textarea>
        </div>
        <div class="form-group mb-3">
            <label for="simpleinput">Date</label>
            <input type="text" asp-for="Date"  class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="simpleinput">Products</label>
            <input type="text" asp-for="Products"  class="form-control">
        </div>

        <div class="form-group mb-3">
            <button type="submit" class="btn btn-outline-success">Save</button>
            <a href="/Order/OrderList/" class="btn btn-outline-info">Back</a>
        </div>
    </div>
</form>
